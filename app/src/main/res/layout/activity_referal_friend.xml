<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6192CD"
    tools:context=".ReferFriendActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refer a Friend"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:gravity="center"
        android:padding="20dp"
        android:background="@android:color/black"/>
    <TextView
        android:id="@+id/skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:layout_marginRight="15dp"
        android:gravity="end"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:textSize="19dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/full_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:background="#FFFFFF"
                android:textColor="#6192CD"
                android:gravity="start"
                android:layout_marginBottom="20dp"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/email_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Email Id"
                android:background="#FFFFFF"
                android:textColor="#6192CD"
                android:gravity="start"
                android:layout_marginBottom="20dp"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/phone_no"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Phone No."
                android:background="#FFFFFF"
                android:textColor="#6192CD"
                android:gravity="start"
                android:layout_marginBottom="20dp"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/relationship_with_refree"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Relationship with Refree"
                android:background="#FFFFFF"
                android:textColor="#6192CD"
                android:gravity="start"
                android:layout_marginBottom="20dp"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/address"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:hint="Address"
                android:background="#FFFFFF"
                android:textColor="#6192CD"
                android:gravity="start"
                android:layout_marginBottom="20dp"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/refer_now"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Refer Now"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textSize="25dp"
                android:gravity="center"
                android:background="#6192CD"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Refering a person you are agreeing with\nTerms and conditions"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>