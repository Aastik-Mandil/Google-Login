<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Contact with us"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@android:color/black"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:padding="10dp"
        android:text="Reach us today to get solar installed at your\nrooftop. Our team will get back to you at the\nearliest."
        android:gravity="center"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Phone Number"/>
                <TextView
                    android:id="@+id/phone_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8739938888"
                    android:textSize="25dp"
                    android:drawableRight="@drawable/ic_phone"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Email"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/send_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sales@peacock.solar"
                    android:textSize="25dp"
                    android:drawableRight="@drawable/ic_email"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/facebook"/>
                <ImageView
                    android:id="@+id/linkedin"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/linkedin"/>
                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/twitter"/>
                <ImageView
                    android:id="@+id/instragram"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1.3"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/instragram"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>